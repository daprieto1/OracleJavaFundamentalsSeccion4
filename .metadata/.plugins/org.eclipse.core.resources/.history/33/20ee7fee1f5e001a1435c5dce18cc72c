package edu.oracle.example;

import java.util.Scanner;

public class HelloWorld {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		//Leer el nombre del estudiante
		String name = "";
		System.out.println("Ingrese el nombre del estudiante:");
		name = sc.nextLine();
		
		// Leer la definitiva del estudiante
		int grade = -1;
		while(grade < 0 || grade >100){
			System.out.println("Ingrese la nota del estudiante ()entre 0 y 100 :");
			grade = sc.nextInt();
		}		
		
		// Mostrarv la nota del estudiante
		System.out.println("La nota del estudiante " + name + " es: " + grade);
		
		
		
		/**
		 * Aqui va un comentario muy largo
		 * Esta es otra l√≠nea
		 */
	}
	
}
